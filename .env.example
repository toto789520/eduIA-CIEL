# Ollama Configuration
# URL of the Ollama API server
OLLAMA_API_URL=http://localhost:11434

# Ollama model to use (e.g., llama2, mistral, codellama)
OLLAMA_MODEL=llama2

# Maximum file upload size in MB
MAX_FILE_SIZE=10

# Email Configuration (for notifications)
# SMTP server hostname
SMTP_HOST=smtp.example.com

# SMTP server port (usually 587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP authentication username
SMTP_USER=your-email@example.com

# SMTP authentication password
SMTP_PASS=your-password

# From email address for notifications
FROM_EMAIL=noreply@eduia-ciel.example.com

# Server domain or IP for email links
SERVER_DOMAIN=localhost:3000

# Base URL for the application (used for API calls)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Server-side base URL for internal API calls
SERVER_BASE_URL=http://localhost:3000

# GitHub repository for update checks
GITHUB_REPO=toto789520/eduIA-CIEL

# Password salt for hashing (change in production!)
PASSWORD_SALT=change-this-to-a-random-string-in-production

# Admin emails (comma-separated) for admin validation privileges
# Default admin: admin@eduia-ciel.local
ADMIN_EMAILS=admin@eduia-ciel.local,admin@example.com,teacher@example.com

